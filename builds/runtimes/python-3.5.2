#!/usr/bin/env bash
# Build Path: /app/.heroku/python/

OUT_PREFIX=$1

echo "Installing libsqlite3-dev"
apt-get -qq update && apt-get install libsqlite3-dev

echo "Building Pythonâ€¦"
SOURCE_TARBALL='https://python.org/ftp/python/3.5.2/Python-3.5.2.tgz'
curl -L $SOURCE_TARBALL | tar xz
mv Python-3.5.2 src
cd src

./configure --prefix=$OUT_PREFIX --with-ensurepip=no
make
make install

