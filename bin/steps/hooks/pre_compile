#!/usr/bin/env bash

if [ -f bin/pre_compile ]; then
    echo "-----> Running pre-compile hook"
    chmod +x bin/pre_compile
    sub_env bin/pre_compile

elif [ -f $BIN_DIR/pre_compile ]; then
    echo "-----> Running buildpack pre-compile hook"
    chmod +x $BIN_DIR/pre_compile
    $BIN_DIR/pre_compile $BUILD_DIR
fi
