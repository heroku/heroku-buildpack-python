#!/usr/bin/env bash

# This script serves as the
# [**Python Buildpack**](https://github.com/keacloud/heroku-buildpack-python)
# post-compiler.
#
# A [buildpack](https://devcenter.heroku.com/articles/buildpacks) is an
# adapter between a Python application and Heroku's runtime.

# ## Usage
# Compiling an app into a slug is simple:
#
#     $ bin/post_compile BUILD_DIR

BIN_DIR=$(cd "$(dirname "$0")"; pwd) # absolute path
BUILD_DIR=$1

source "$BIN_DIR/utils"

ARGS="${COCONUT_ARGS:=}"

# Check for coconut files
if compgen -G "$BUILD_DIR/**/*.coco" > /dev/null; then
     puts-step "Installing compiler"
     pip install coconut 2>&1 | tee "$WARNINGS_LOG" | cleanup | indent

     puts-step "Compilng .coco files"

     python -m coconut.main $BUILD_DIR $BUILD_DIR --package --force $ARGS 2>&1 | tee "$WARNINGS_LOG" | cleanup | indent
fi
